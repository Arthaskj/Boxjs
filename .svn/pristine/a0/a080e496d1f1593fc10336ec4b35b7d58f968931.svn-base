<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title>记事本</title>
		<link rel="stylesheet" href="../resource/css/base.css">
	</head>
	<body>
		<section id="todoapp">
			<header id="header">
				<h1>记事本</h1>
				<input id="new-todo" placeholder="写点什么呢?" autofocus />
			</header>
			<section id="main">
				<input id="toggle-all" type="checkbox">
				<ul id="todo-list"></ul>
			</section>
		</section>
		
		<script id="template_new_todo" type="text/template">
			<li class="">
			    <div class="view">
			        <input class="toggle" type="checkbox">
			        <label>{todo}</label>
			        <button class="destroy"></button>
			    </div>
			    <input class="edit" value="{todo}"/>
			</li>
		</script>

		<script type="text/javascript" src="../resource/js/jquery-1.8.1.min.js"></script>
		<script type="text/javascript" src="../resource/js/box.debug.js"></script>

		<script type="text/javascript">
		 
		    Box.app.Application.create({
		        name: 'App',
		        baseFolder: '../app',
		        paths: {},
		        resources: [],
		        launch: 'App.Todos'
		    });

		</script>

	</body>
</html>