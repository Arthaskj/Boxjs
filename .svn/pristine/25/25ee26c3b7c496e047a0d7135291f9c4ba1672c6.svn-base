Box.define('Demo.window.index',{

    name:'窗口的实例',
    requires:[
          'Demo.window.indexDetail'

    ],
    extend:'Box.Component',

    templates: {
        main:[

              '<div style="margin-left: 50px;margin-top: 50px;">' +
              '<button class="button k-button">Click here to open the window</button> </br></br></br>'+
              '<div class="text" style="display:inline-block;width:750px;"></div>'+
              '</div>'
         ]
    },

    elements:{
        button: '.button',
        text: '.text'
    },

    events:{
        'click button': 'window'
    },

    setup:function () {
        var me=this;
        var myCodeMirror = CodeMirror(this.el.text[0],{
            // value: "function myScript(){return 100;}\n",
            mode:  "javascript",
            theme: 'dracula'//设置主题，先找到主题对应的CSS文件引入进来，再设置一下名字，再改一下样式
        });
        Box.require('text!app/window/indexDetail.js', function (text) {
           myCodeMirror.setValue(text)
        });
    },

    window:function(){

        var index = new Demo.window.indexDetail();

    }


});