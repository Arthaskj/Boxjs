Box.define('Demo.questionreminder.index',{

    extend:'Box.Questionreminder',

    templates:{
        content:[
            '<div>'+
            '<div class="reminder"></div>'+
            '<div class="text"></div>'+
            '</div>'
        ]
    },

    contentElements:{
        reminder:'.reminder',
        text:".text"
    },

    init:function () {
        Box.Questionreminder.show({
            message: 'Success',
            renderTo: this.el.reminder
        });

        var me=this;
        var myCodeMirror = CodeMirror(this.el.text[0],{
            // value: "function myScript(){return 100;}\n",
            mode:  "javascript",
            theme: 'dracula'//设置主题，先找到主题对应的CSS文件引入进来，再设置一下名字，再改一下样式
        });
        Box.require('text!app/notify/index.js', function (text) {
            myCodeMirror.setValue(text)
        });
    }

});