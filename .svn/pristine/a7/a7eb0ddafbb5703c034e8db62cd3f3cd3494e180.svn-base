Box.define('Demo.notify.index',{
//可以多做几个按钮 弹出警告成功错误之类的
    extend:'Box.Component',

    templates:{
        main:[
            '<div>'+
            '<button class="info k-info">点击弹出提示</button>&nbsp;&nbsp;'+
            '<button class="warning k-warning">点击弹出警告</button>&nbsp;&nbsp;'+
            '<button class="success k-success">点击提示成功</button>&nbsp;&nbsp;'+
            '<button class="error k-primary">点击提示错误</button>'+
            '<div><button class="button k-primary">查看源代码</button></div>'+
            '</div>'
        ]
    },

  elements:{
        info:'.info',
        warning:'.warning',
        success:'.success',
        error:'.error',
        text:".button"
    },

    events:{
        'click info':'infoNotify',
        'click warning':'warningNotify',
        'click success':'successNotify',
        'click error':'errorNotify',
        'click text':'searchFile'
    },

    setup:function () {

    },

    infoNotify:function () {
        Box.Notify.info("弹出提示消息");
    },
    warningNotify:function () {
        Box.Notify.warning("弹出警告消息");
    },
    successNotify:function () {
        Box.Notify.success("弹出成功消息");
    },
    errorNotify:function () {
        Box.Notofy.error("弹出错误消息");
    },
    searchFile:function () {
        var me=this;
        var myCodeMirror = CodeMirror(this.el.text[0],{
            // value: "function myScript(){return 100;}\n",
            mode:  "javascript",
            theme: 'dracula'//设置主题，先找到主题对应的CSS文件引入进来，再设置一下名字，再改一下样式
        });
        Box.require('text!app/notify/index.js', function (text) {
            myCodeMirror.setValue(text)
        });
    }


});