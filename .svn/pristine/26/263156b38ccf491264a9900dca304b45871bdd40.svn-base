    requires:[
        'Demo.reminder.index'
    ],

    templates:{
        main:[
             '<div>'+
                 '</div>'
        ]
    },
    setup:function () {

        Box.Window.show({
            init: function () {
                 new Demo.reminder.index({
                     renderTo:this.el.content
                 })
            },
            title: " 新增",
            autoOpen: false,
            closeAction: 'destroy',
            width: 700,
            height: 400,
            buttons: [
                {
                    name: 'btn_Add',
