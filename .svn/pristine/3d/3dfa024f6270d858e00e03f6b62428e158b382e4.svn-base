<div class="{cls} {baseCls} animated fadeIn">

    <tpl if="title">
        <div class="header">
            <span class="title">{title}</span>
            <ul class="tools">
                <tpl if="refreshable = true">
                    <li class="refresh"><i></i></li>
                </tpl>
                <tpl if="toggleable = true">
                    <li class="toggle"><i></i></li>
                </tpl>
                <tpl if="closeable = true">
                    <li class="close"><i></i></li>
                </tpl>
            </ul>
        </div>
    </tpl>


    <div class="content scroll">
        <div class="inner" style="padding: {body_padding}px;"></div>
    </div>


    <tpl if="buttons &amp;&amp; buttons.length == 0">
        <div class="footer" style="display: none;"></div>

      <tpl else>
            <div class="footer"></div>
        </tpl>

        <div class="loader" style="z-index: 2"></div>
</div>